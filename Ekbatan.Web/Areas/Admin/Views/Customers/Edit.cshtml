@model Ekbatan.DomainClasses.Customer.Customer

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<h4 class="btn btn-primary"><i class="fa fa-edit"> </i> ویرایش مشخصات مشتریان </h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer_ID" />
            <div class="form-group">
                <label asp-for="CName" class="control-label"></label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CFamily" class="control-label"></label>
                <input asp-for="CFamily" class="form-control" />
                <span asp-validation-for="CFamily" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MelliCode" class="control-label"></label>
                <input asp-for="MelliCode" class="form-control" />
                <span asp-validation-for="MelliCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SHNo" class="control-label"></label>
                <input asp-for="SHNo" class="form-control" />
                <span asp-validation-for="SHNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobilePhone" class="control-label"></label>
                <input asp-for="MobilePhone" class="form-control" />
                <span asp-validation-for="MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=" ثبت " class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info"> بازگشت به لیست مشتریان</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
