@model Ekbatan.DomainClasses.Karbari.Karbari

@{
    ViewData["Title"] = "ویرایش";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<h4 class="btn btn-primary"> <i class="fa fa-edit"></i> ویرایش  نوع کاربری ثبت شده</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Karbari_ID" />
            <div class="form-group">
                <label asp-for="Karbari_Desc" class="control-label"></label>
                <input asp-for="Karbari_Desc" class="form-control" />
                <span asp-validation-for="Karbari_Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">بازگشت به لیست کاربری های ثبت شده</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
